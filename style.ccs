.mono {
  text-decoration: none;
  color: white;
  display: inline-block;
  position: relative;
  background-position: center;
}
.mono::before {
  content: url('mono.png');
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: inherit;
  filter: brightness(65%);
  z-index: -1;
}
