.flow div {
	display:flex;
}
.flow a{
	background-size:cover;
	width:33.3%;
	height:400px;
	background-position:center;
	font-size:35px; 
	color:white;
	text-align:center;
	line-height:9;
	overflow:hidden;
}
.big img{
	width:100%;
}
.big a{
	background-color:#8A91A1;
	color:black;
	text-decoration:none;
	padding:10px;
	border-radius:15px;
}
.big article{
	margin-left:20px;
	height:155px;
}
.big h4{
	margin:15px 0 15px 0;
	
}
.big{
	height:1100px;
	background-image:url('big_flowers.png');
	background-size:cover;
	position:relative;
	width:100%;
}
.wind{
	position:relative;
	left:46%;
	top:420px;
	z-index:10;
	transform:translateX(-50%);
}
.wind:hover{
	transform:translateX(-50%) scale(1.5);
	
}
.help{
	display:flex;
	align-items:center;
	gap:20px;
	
}
.help img{
	width:150px;
	height:150px;
	border-radius:15px;
	object-fit:cover;
	flex-shrink:0;
}
.help article{
	flex:1;
	min-width:200px;
}
.kontakt{
	position:absolute;
	right:5%;
	top:1%;
}
.mail{
	display:flex;
	justify-content:space-around;
	align-items:center;
}
.mail div{
	width:40%;
	text-align:center;
	
}
.mail input[type="text"],.mail input[type="tel"],.mail input[type="email"]{
	margin-bottom:20px;
	margin-top:20px;
	border:none;
	border-bottom:1px solid black;
	background-color:#F5F2F0;
	color:black;
	width:400px;
	height:50px;
	padding-left:10px;
}
button{
	background-color:#8A91A1;
	border-radius:15px;
	border:none;
	padding:15px;
	color:white;
}
.mail{
	background-color:#F5F2F0;
	padding-bottom:30px;
	padding-top:30px;
}
form{
	text-align:left;
	
}
input::placeholder{
	color:black;
}
input[type="file"]::file-selector-button{
	color:white;
	background-color:#8A91A1;
	margin-top:20px;
	margin-bottom:20px;
	border-radius:15px;
	border:none;
	padding:15px;
	color:white;
}
.for{
	background-color:#F5F2F0;
	padding-bottom:15px;
	padding-top:15px;
	margin-bottom:0;
	padding-left:30px;
}
#flo{
	z-index:5;
	width:auto;
	max-width:700px;
	display:none;
	position:absolute;
	left:45%;
	top:20%;
	background-color:white;
	padding:20px;
	border-radius:10px;
}
